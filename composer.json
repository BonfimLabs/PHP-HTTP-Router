{
    "name": "bonfim/router",
    "type": "library",
    "description": "A fast and powerful router that maps route callbacks to specific HTTP request methods and URIs. It supports parameters and pattern matching",
    "keywords": [
        "BonfimLabs",
        "Router"
    ],
    "homepage": "https://github.com/BonfimLabs/Router",
    "license": "MIT",
    "authors": [
        {
            "name": "Edson Onildo",
            "email": "inbox.edsononildo@gmail.com",
            "homepage": "https://github.com/EdsonOnildoJR",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.1"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Bonfim\\Router\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bonfim\\Router\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
